div.starter-template
    p There are {{contacts.length}} contacts.
    div(ng-repeat='contact in contacts')
        h3 {{contact.first_name}} {{contact.last_name}}
        div {{contact.address}}
        div {{contact.city}}, {{contact.state}} {{contact.zipcode}}
        div {{contact.email}}
        div {{contact.phone}}
        a(href='editContact/{{contact._id}}') Edit
        | -
        a(href='deleteContact/{{contact._id}}') Delete

    table.table.table-hover
        thead
            tr
                th
                    a(href="", ng-click="predicate = 'last_name'; reverse=!reverse") Name
                th Address
                th
                    a(href="", ng-click="predicate = 'zipcode'; reverse=!reverse") Location
                th
                    a(href="", ng-click="predicate = 'zipcode'; reverse=!reverse") Zip Code
                th Phone Number
                th E-mail
        tbody
            tr(ng-repeat='contact in contacts| orderBy:predicate:reverse')
                td {{contact.last_name}}, {{contact.first_name}}
                td {{contact.address}}
                td {{contact.city}}, {{contact.state}}
                td {{contact.zipcode}}
                td {{contact.phone}}
                td {{contact.email}}
